<form action="/addTheme" method="get">
  <div class="input-group mb-3">
    <span class="input-group-text" id="inputGroup-sizing-default">Заголовок</span>
    <input type="text" name="title" class="form-control" aria-label="Sizing example input"
      aria-describedby="inputGroup-sizing-default">
  </div>
  <div class="input-group mb-3">
    <span class="input-group-text" id="inputGroup-sizing-default">Текст поста</span>
    <input type="text" name="text" class="form-control" aria-label="Sizing example input"
      aria-describedby="inputGroup-sizing-default">
  </div>
  <select class="form-select mb-3" name="theme_id" aria-label="Default select example">
    <option selected>Выберите тему</option>
    {{#each titles}}
    <option value={{this.id}}>{{this.title}}</option>
    {{/each}}
  </select>
  <button type="submit" class="btn btn-primary">Добавить</button>
</form>
